<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FormFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/lien_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12sp"
                android:backgroundTint="@color/White"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="textPersonName"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post-nom"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prénom"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sexe"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <Spinner
                    android:id="@+id/sp_enrollment_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:hint=" "
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lieu de naissance"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_birthplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="text"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date de naissance"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_enrollment_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_adresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nationalité"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_enrollment_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:hint=" "
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/btn_enrollment_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@color/colorOrange"
                    android:text="Enregistrer"
                    android:padding="20dp"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorIkwook" />

            </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>