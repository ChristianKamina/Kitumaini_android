<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_beneficiare_activity"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lien_login"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="56dp"
            app:srcCompat="@drawable/logo_kitumaini" />

        <LinearLayout
            android:id="@+id/lien_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12sp"
                    android:backgroundTint="@color/White"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date de naissance"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_benef_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/custom_input"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:hint=" "
                        android:inputType="textPersonName"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Pin"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/custom_input"
                        android:drawablePadding="10dp"
                        android:hint=" "
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_benef_Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@color/colorOrange"
                        android:text="Se connecter"
                        android:padding="20dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/colorIkwook" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="PIN oubliÃ© ?"
                        android:textColor="@color/grey_12"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:gravity="end"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>