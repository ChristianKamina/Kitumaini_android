<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:backgroundTint="@color/White">

                <TextView
                    android:id="@+id/txt_name_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom du centre de santé"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lieu_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lieu"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:layout_marginTop="20sp"
                    android:drawablePadding="10dp"
                    app:drawableStartCompat="@drawable/ic_baseline_place" />

                <TextView
                    android:id="@+id/txt_phone_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Téléphone"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:layout_marginTop="20sp"
                    android:drawablePadding="10dp"
                    app:drawableStartCompat="@drawable/ic_baseline_local_phone" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bordure"
                    android:backgroundTint="@color/colorOrange"
                    android:text="APPELER"
                    android:textColor="@color/White"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>